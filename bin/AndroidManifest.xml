<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bretblack.wesay"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.READ_SMS" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Venom" 
        android:name="GlobalDb">
        <activity
            android:name="com.bretblack.wesay.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bretblack.wesay.QuoteFinderActivity"
            android:label="@string/title_activity_random_thought" >
        </activity>
        <activity
            android:name="com.bretblack.wesay.FavoritesActivity"
            android:label="@string/title_activity_favorites" >
        </activity>
        <activity
            android:name="com.bretblack.wesay.FavoritesDbAdapter"
            android:label="@string/title_activity_favorites_db_adapter" >
        </activity>
    </application>

</manifest>

